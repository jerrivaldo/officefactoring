{
  "id": "br.com.jcasoftware.OfficeFactoring",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "command": "OfficeFactoring",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--env=GDK_BACKEND=x11",
    "--env=LD_LIBRARY_PATH=/app/bin"
  ],
  "modules": [
    {
      "name": "OfficeFactoring",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 OfficeFactoring /app/bin/OfficeFactoring",
        "install -Dm755 libmidas.so.2 /app/bin/libmidas.so.2",
        "install -Dm644 br.com.jcasoftware.OfficeFactoring.desktop /app/share/applications/br.com.jcasoftware.OfficeFactoring.desktop",
        "install -Dm644 br.com.jcasoftware.OfficeFactoring.metainfo.xml /app/share/metainfo/br.com.jcasoftware.OfficeFactoring.metainfo.xml",
        "install -Dm644 icons/128x128/OfficeFactoring.png /app/share/icons/hicolor/128x128/apps/OfficeFactoring.png",
        "install -Dm644 icons/256x256/OfficeFactoring.png /app/share/icons/hicolor/256x256/apps/OfficeFactoring.png",
        "install -Dm644 icons/512x512/OfficeFactoring.png /app/share/icons/hicolor/512x512/apps/OfficeFactoring.png",
        "install -Dm644 icons/64x64/OfficeFactoring.png /app/share/icons/hicolor/64x64/apps/OfficeFactoring.png"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://raw.githubusercontent.com/jerrivaldo/officefactoring/master/OfficeFactoring.tar.gz",
          "sha256": "b314a33920596890cacb44b80e6e48e8fffab79e2c96ab9aefd7cd264f17f787",
          "dest": "."
        }
      ]
    }
  ]
}

